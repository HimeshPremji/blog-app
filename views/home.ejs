<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
    <%- include('./partials/head') %>
    <style>
      * {
        font-family: Arial, Helvetica, sans-serif;
      }

      .blog-container {
        margin-top: 2rem;
        max-width: 1200px;
        display: flex;
        background: #f1f1f1;
        flex-wrap: wrap;
        justify-content: center;
        padding: 40px 10px;
      }

      #cards-con {
        columns: 3;
        column-gap: 1rem;
      }

      .card {
        /* min-width: 22rem; */
        height: fit-content;
        overflow: hidden;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        break-inside: avoid;
        margin-bottom: 1rem;
        background: #fff;
        padding: 0.8rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
      }

      .card img {
        object-fit: cover;
      }

      .card-body {
        padding: 20px;
      }

      .card-title {
        font-size: 1.4rem;
        font-weight: 600;
        color: #333;
      }

      .card-title {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100%;
      }

      .card-text {
        color: #555;
        font-size: 0.95rem;
        line-height: 1.5;
      }

      .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 15px;
        border-radius: 8px;
        font-weight: 500;
        transition: background 0.3s ease-in-out;
      }

      .btn-primary:hover {
        background-color: #0056b3;
      }

      @media (max-width: 768px) {
        .blog-container {
          flex-direction: column;
          align-items: center;
        }
        #cards-con {
          columns: 2;
          column-gap: 0.4rem;
        }
      }
      @media (max-width: 480px) {
        #cards-con {
          columns: 1;
          column-gap: 0.1rem;
        }
      }
    </style>
  </head>
  <body>
    <%- include('./partials/navbar') %>
    <div class="mt-4">
      <div class="blog-container rounded mt-2 my-5 mx-auto row">
        <h1 class="text-center mb-4 fw-bold">Blogify Blogs</h1>
        <div id="cards-con">
          <% blogs.forEach(blog => { %>
          <div class="card">
            <img
              src="/<%= blog.coverImageURL %>"
              class="card-img-center mt-2"
              alt="Blog Image"
            />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text"><%= blog.body.substring(0, 52) %>...</p>
              <a
                target="_blank"
                href="/blog/<%= blog.id %>"
                class="btn col-12 btn-primary btn-sm"
                >Read more</a
              >
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
    <%- include('./partials/scripts') %>
  </body>
</html>
