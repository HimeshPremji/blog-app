<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add new Blogpage</title>
    <%- include('./partials/head') %>

    <style>
      input[type='text'],
      input[type='file'],
      textarea {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 16px;
        background-color: #f6f7f8;
        outline: none;
        transition: all 0.2s ease-in-out;
        font-family: Arial, sans-serif;
      }

      input[type='text']:focus,
      input[type='file']:focus,
      textarea:focus {
        border-color: #0079d3;
        background-color: #ffffff;
        box-shadow: 0 0 4px rgba(0, 121, 211, 0.2);
      }

      input[type='text']:focus ~ #titleCounter {
        transition: 0.1s ease-in-out;
        opacity: 1;
      }

      #titleCounter {
        opacity: 0;
        transition: 0.1s ease-in-out;
      }

      label {
        font-size: 14px;
        font-weight: 600;
        color: #333;
        display: block;
        margin-bottom: 5px;
      }

      label.required::after {
        content: ' *';
        color: red;
      }

      .character-counter {
        font-size: 12px;
        color: #777;
        text-align: right;
        margin-top: 4px;
      }

      input[type='file'] {
        border: none;
        background: none;
        padding: 0;
        cursor: pointer;
      }

      button {
        background-color: #1266a7;
        color: white;
        font-weight: bold;
        padding: 4px 14px;
        border: none;
        border-radius: 14px;
        cursor: pointer;
        transition: background 0.2s ease-in-out;
      }

      button:hover {
        background-color: #005fa3;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/navbar') %>

    <div class="container mt-4">
      <h1 class="text-center">Blogpage</h1>

      <form action="/blog" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="required">Title</label>
          <input
            required
            name="title"
            type="text"
            class="form-control"
            id="title"
            placeholder="Enter title"
            maxlength="300"
            oninput="updateCounter(this)"
          />
          <div class="character-counter" id="titleCounter">0/300</div>
        </div>

        <div class="mb-3">
          <label for="blogExcerpt">Body Text (Optional)</label>
          <textarea
            required
            name="body"
            id="blogExcerpt"
            rows="4"
            placeholder="Write something here..."
          ></textarea>
        </div>

        <div
          class="d-flex align-items-start justify-content-start flex-column gap-3"
        >
          <div>
            <label for="coverImage" class="form-label"
              >Upload Cover Image</label
            >
            <input
              type="file"
              name="coverImage"
              id="coverImage"
              accept="image/*"
            />
          </div>

          <div>
            <button type="submit">Submit</button>
          </div>
        </div>
      </form>
    </div>

    <%- include('./partials/scripts') %>
    <script>
      function updateCounter(input) {
        const counter = document.getElementById(input.id + 'Counter');
        counter.textContent = input.value.length + '/300';
      }
    </script>
  </body>
</html>
