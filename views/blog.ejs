<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include("./partials/head") %>
    <title><%= blog.title %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
      }
      .post-container {
        max-width: 1100px;
        margin: auto;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .post-title {
        text-align: center;
        color: #343a40;
      }
      .post-image {
        width: 100%;
        height: auto;
        border-radius: 8px;
        margin-bottom: 20px;
      }
      .post-author,
      .post-content {
        font-family: 'Lora', serif;
        background: #f4f4f4;
        padding: 15px;
        border-radius: 8px;
        white-space: pre-wrap;
        word-wrap: break-word;
        font-size: 16px;
        line-height: 1.5;
      }
      .post-author {
        font-family: Arial, Helvetica, sans-serif;
      }
      .post-author {
        display: flex;
        align-items: center;
        justify-content: flex-end;
        gap: 8px;
        font-size: 16px;
        font-weight: 500;
        color: #333;
      }

      .post-author img {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #ddd;
        padding: 2px;
      }

      .post-author span {
        font-weight: 600;
        color: #444;
      }

      /* Comment Section */
      .comment-container {
        max-width: 1100px;
      }
      .comment-input-field label {
        white-space: nowrap;
        margin: 0 24px 0 0;
      }
      .comment-input-field {
        position: relative;
        display: flex;
        align-items: center;
      }
      #comment-textarea:focus ~ .char-count {
        opacity: 1;
      }
      .char-count {
        opacity: 0;
        position: absolute;
        top: 100%;
        transform: translateY(-100%);
        right: 10px;
        font-size: 12px;
        color: #777;
        text-align: right;
        margin-top: 4px;
      }
      .submit-button {
        background-color: #1266a7;
        color: white;
        font-weight: bold;
        padding: 4px 14px;
        border: none;
        border-radius: 14px;
        cursor: pointer;
        transition: background 0.2s ease-in-out;
      }

      .submit-button:hover {
        background-color: #005fa3;
      }
    </style>
  </head>
  <body>
    <%- include("./partials/navbar") %>
    <div class="container mt-4">
      <div class="post-container">
        <img
          src="/<%= blog.coverImageURL %>"
          alt="Blog Image"
          class="post-image"
        />
        <h2 class="text-start post-title"><%= blog.title %></h2>
        <pre class="post-content"><%= blog.body %></pre>
        <p class="post-author">
          Created by
          <img src="<%= blog.createdBy.profileImageURL %>" alt="Author Image" />
          <span><%= blog.createdBy.fullName %></span>
        </p>
      </div>
      <div class="container comment-container my-4">
        <form action="/blog" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <h3 class="comment-title">Leave a Comment</h3>
            <div class="comment-input-field">
              <label for="comment-textarea" class="required"
                ><%= user.fullName %></label
              >
              <input
                required
                name="content"
                type="text"
                class="form-control"
                id="comment-textarea"
                placeholder="Enter your comment"
                maxlength="300"
                oninput="updateCharacterCount(this)"
              />
              <div class="char-count" id="charCount">0/300</div>
            </div>
          </div>

          <div
            class="d-flex align-items-start justify-content-start flex-column gap-3"
          >
            <div>
              <button type="submit" class="submit-button">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <%- include("./partials/scripts") %>
    <script>
      function updateCharacterCount(input) {
        const counter = document.getElementById('charCount');
        counter.textContent = input.value.length + '/300';
      }
    </script>
  </body>
</html>
